{% extends "PROCERGSLoginCidadaoCoreBundle:Document:base.html.twig" %}

{% block documents_content %}
    <h1 class="visible-xs">{% trans %}Documents{% endtrans %}</h1>

    {% trans_default_domain 'FOSUserBundle' %}
    <div class="form-content">

        {% if generalDocsForm is defined %}
            {{ include("PROCERGSLoginCidadaoCoreBundle:Document:general.html.twig", { 'generalDocsForm': generalDocsForm }) }}
        {% else %}
            {{ render(controller('PROCERGSLoginCidadaoCoreBundle:Document:general')) }}
        {% endif %}

        {{ render(controller('PROCERGSLoginCidadaoCoreBundle:IdCard:list')) }}

        <a name="id-card-forms-placeholder" class="anchor"></a>
        <div class="id-card-forms-placeholder">
            {% block id_card_forms_placeholder %}{% endblock %}
        </div>
    </div>
{% endblock documents_content %}

{% block javascripts %}
{{ parent() }}
{% javascripts '@PROCERGSLoginCidadaoCoreBundle/Resources/public/js/idCard.js'
               '@PROCERGSLoginCidadaoCoreBundle/Resources/public/js/components/jquery-scrollto.js' filter='uglifyjs2' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock javascripts %}
